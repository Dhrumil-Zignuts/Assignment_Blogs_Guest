<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="megakit,business,company,agency,multipurpose,modern,bootstrap4">

	<meta name="author" content="themefisher.com">

	<title>Dhrumil's Blogs</title>

	<!-- bootstrap.min css -->
	<link rel="stylesheet" href="../public/plugins/bootstrap/css/bootstrap.min.css">
	<!-- Icon Font Css -->
	<link rel="stylesheet" href="../public/plugins/themify/css/themify-icons.css">
	<link rel="stylesheet" href="../public/plugins/fontawesome/css/all.css">
	<link rel="stylesheet" href="../public/plugins/magnific-popup/dist/magnific-popup.css">
	<!-- Owl Carousel CSS -->
	<link rel="stylesheet" href="../public/plugins/slick-carousel/slick/slick.css">
	<link rel="stylesheet" href="../public/plugins/slick-carousel/slick/slick-theme.css">

	<!-- Main Stylesheet -->
	<!-- <link rel="stylesheet" href="css/style.css"> -->
	<link rel="stylesheet" href="../public/css/style.css">

	<!-- jQuery CDN Link  -->
	<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
    crossorigin="anonymous"></script>

</head>

<body>
	<div class="main-wrapper ">
		<section class="page-title bg-1">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="block text-center">
							<span class="text-white">Our blog</span>
							<h1 class="text-capitalize mb-4 text-lg">Blog articles</h1>
							<ul class="list-inline">
								<li class="list-inline-item"><a href="index.html" class="text-white">Home</a></li>
								<li class="list-inline-item"><span class="text-white">/</span></li>
								<li class="list-inline-item"><a href="#" class="text-white-50">Our blog</a></li>
							</ul>
							<form method="GET" action="/blogs/search" class="d-flex">
								<input type="text" name="search" id="search" class="form-control rounded mr-3" value=""
									placeholder="Search">
								<button id="submit-btn" type="submit" class="btn btn-small btn-main rounded">Search</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="section blog-wrap bg-gray">
			<div class="container">
				<div class="row">
					<% for(let i=0; i < blogs.length; i++) {%>
						<div class="col-lg-6 col-md-6 mb-5">
							<div class="blog-item">
								<div class="text-start blog-image" style="
									width: 100% ;
									height: 370px;
									background: url('<%= blogs[i].imageurl%>') no-repeat center center/cover;
									background-color: #f5f8f9;
								">
								</div>
								<div class="blog-item-content bg-white p-5">
									<div class="blog-item-meta bg-gray py-1 px-2">
										<span class="text-muted text-capitalize mr-3"><i class="ti-pencil-alt mr-2"></i>
											<%= blogs[i].category %>
										</span>
										<span class="text-black text-capitalize mr-3"><i class="ti-time mr-1"></i>
											<%= blogs[i].createdAt.getDate() %>/<%= blogs[i].createdAt.getMonth()+1%>/<%= blogs[i].createdAt.getFullYear()%>
										</span>
									</div>
									<h3 class="mt-3 mb-3"><a>
											<%= blogs[i].title %>
										</a>
									</h3>
									<p class="mb-4 blogDescription" id="description-data" style="
										/* border: 1px solid red; */
										height: 205px;
										width: 100%;
										overflow: hidden;
										text-overflow: ellipsisd;
									">
										<%= blogs[i].description%>
									</p>

									<a href="/blogs/<%= blogs[i]._id %>/<%= blogs[i].slug %>"
										class="btn btn-small btn-main btn-round-full readMore">Read More</a>
								</div>
							</div>
						</div>
						<% } %>
				</div>
			</div>
		</section>
	</div>
	<script>
		$(document).ready(function () {
			$('.blogDescription').each(function () {
				let tempHTML = $(this).text();
				// console.log(tempHTML);
				$(this).html(tempHTML)

			});
		})
	</script>
	<!-- Main jQuery -->
	<script src="../public/plugins/jquery/jquery.js"></script>
	<script src="../public/js/contact.js"></script>
	<!-- Bootstrap 4.3.1 -->
	<script src="../public/plugins/bootstrap/js/popper.js"></script>
	<script src="../public/plugins/bootstrap/js/bootstrap.min.js"></script>
	<!--  Magnific Popup-->
	<script src="../public/plugins/magnific-popup/dist/jquery.magnific-popup.min.js"></script>
	<!-- Slick Slider -->
	<script src="../public/plugins/slick-carousel/slick/slick.min.js"></script>
	<!-- Counterup -->
	<script src="../public/plugins/counterup/jquery.waypoints.min.js"></script>
	<script src="../public/plugins/counterup/jquery.counterup.min.js"></script>

	<!-- Google Map -->
	<script src="../public/plugins/google-map/map.js"></script>
	<script
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAkeLMlsiwzp6b3Gnaxd86lvakimwGA6UA&callback=initMap"></script>

	<script src="../public/js/script.js"></script>

</body>

</html>