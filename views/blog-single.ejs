<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="megakit,business,company,agency,multipurpose,modern,bootstrap4">

	<meta name="author" content="themefisher.com">

	<title>Megakit| Html5 Agency template</title>

	<!-- bootstrap.min css -->
	<link rel="stylesheet" href="/public/plugins/bootstrap/css/bootstrap.min.css">
	<!-- Icon Font Css -->
	<link rel="stylesheet" href="/public/plugins/themify/css/themify-icons.css">
	<link rel="stylesheet" href="/public/plugins/fontawesome/css/all.css">
	<link rel="stylesheet" href="/public/plugins/magnific-popup/dist/magnific-popup.css">
	<!-- Owl Carousel CSS -->
	<link rel="stylesheet" href="/public/plugins/slick-carousel/slick/slick.css">
	<link rel="stylesheet" href="/public/plugins/slick-carousel/slick/slick-theme.css">

	<!-- Main Stylesheet -->
	<link rel="stylesheet" href="/public/css/style.css">

	<!-- jQuery CDN Link  -->
	<script src="https://code.jquery.com/jquery-3.6.3.js"
		integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>

</head>

<body>

	<!-- Header Start -->

	<header class="navigation">
		<div class="header-top ">
			<%- include('partials/nav-bar.ejs') %>
		</div>
	</header>

	<!-- Header Close -->

	<div class="main-wrapper ">
		<section class="section blog-wrap bg-gray">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="row">
							<div class="col-lg-12 mb-5">
								<div class="single-blog-item">
									<div class="text-start blog-image" style="
										width: 100% ;
										height: 670px;
										background: url('<%= oneBlog.imageurl %>') no-repeat center center/cover;
									">
									</div>
								</div>
								<!-- <img src="../public/images/blog/2.jpg" alt="" class="img-fluid rounded"> -->
								<div class="blog-item-content bg-white p-5">
									<div class="blog-item-meta bg-gray py-1 px-2">
										
										<span class="text-black text-capitalize mr-3"><i class="ti-time mr-1"></i>
											<%= oneBlog.createdAt.getDate() %>/<%= oneBlog.createdAt.getMonth()+1%>/<%= oneBlog.createdAt.getFullYear()%></span>
									</div>

									<h2 class="mt-3 mb-4"><a>
											<%= oneBlog.title %>
										</a></h2>
									<div class="mb-4 blogDescription">
										<%= oneBlog.description%>
									</div>

									<div class="tag-option mt-5 clearfix">
										<ul class="float-left list-inline">
											<li>Tags:</li>
											<li class="list-inline-item"><a href="#" rel="tag">Advancher</a></li>
											<li class="list-inline-item"><a href="#" rel="tag">Landscape</a></li>
											<li class="list-inline-item"><a href="#" rel="tag">Travel</a></li>
										</ul>
										<ul class="float-right list-inline">
											<li class="list-inline-item"> Share: </li>
											<li class="list-inline-item"><a href="#" target="_blank"><i
														class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
											<li class="list-inline-item"><a href="#" target="_blank"><i
														class="fab fa-twitter" aria-hidden="true"></i></a></li>
											<li class="list-inline-item"><a href="#" target="_blank"><i
														class="fab fa-pinterest-p" aria-hidden="true"></i></a></li>
											<li class="list-inline-item"><a href="#" target="_blank"><i
														class="fab fa-google-plus" aria-hidden="true"></i></a></li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</section>
	</div>
	<script>
		$('document').ready(function () {
			$('.blogDescription').each(function () {
				let tempHTML = $(this).text();
				$(this).html(tempHTML)
			});
		})
	</script>


	<!-- Main jQuery -->
	<script src="/public/plugins/jquery/jquery.js"></script>
	<script src="/public/js/contact.js"></script>
	<!-- Bootstrap 4.3.1 -->
	<script src="/public/plugins/bootstrap/js/popper.js"></script>
	<script src="/public/plugins/bootstrap/js/bootstrap.min.js"></script>
	<!--  Magnific Popup-->
	<script src="/public/plugins/magnific-popup/dist/jquery.magnific-popup.min.js"></script>
	<!-- Slick Slider -->
	<script src="/public/plugins/slick-carousel/slick/slick.min.js"></script>
	<!-- Counterup -->
	<script src="/public/plugins/counterup/jquery.waypoints.min.js"></script>
	<script src="/public/plugins/counterup/jquery.counterup.min.js"></script>

	<!-- Google Map -->
	<script src="/public/plugins/google-map/map.js"></script>
	<script
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAkeLMlsiwzp6b3Gnaxd86lvakimwGA6UA&callback=initMap"></script>

	<script src="/public/js/script.js"></script>

</body>

</html>